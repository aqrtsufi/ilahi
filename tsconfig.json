  "compilerOptions": {
    "baseUrl": ".",
    "composite": false,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  
  "exclude": [
    // ... other exclusions ...
    
    "*/*.ignore.ts",
     "*/*.ignore.vue",
  ]
}